[colors]
background = #bb383C4A
background-alt = #222
foreground = #dfdfdf
foreground-alt = #555
primary = #5294e2

[bar/desktop]
monitor = ${env:MONITOR:DisplayPort-2}
width = 100%
height = 25
radius = 0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = 
border-size = 0
border-color =
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2
font-0 = DejaVu Sans:size=9
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=9;1
font-3 = "Font Awesome 5 Free:style=Regular:pixelsize=9;1"
font-4 = "Font Awesome 5 Free:style=Solid:pixelsize=9;1"
font-5 = "Font Awesome 5 Brands:pixelsize=9;1"
modules-left = i3
modules-center =  date 
modules-right = spotify updates volume
tray-position = right
tray-padding = 2
tray-transparent = true
tray-background = ${colors.background}
tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
cursor-click = pointer
cursor-scroll = ns-resize

